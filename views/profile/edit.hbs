<!DOCTYPE html>
<html lang="en">
{{> frontend/head}}
<body>
{{> backend/header}}

<section class="banner-w3-agileits-btm-right py-5" id="about">
    <div class="container py-xl-5 py-sm-3">
        <div class="row">
            <div class="col-lg-12 about-left">
    <div style="width:100%; text-align:center; color:red; height: 0px;">{{message}}</div>
    <br />
                {{#form "/profile/edit" method="post" class="form" encType="multipart/form-data"}}
        {{label "image" "Image Upload"  style="margin-top:10px;"}}
        <br />
        {{hidden "imageUpload" "imageUpload" id="imageUpload"}}
                    <span style="font-size: 11px; color:red">(Only Takes .png .jpg .gif File Format)</span>
        <br />
        {{label "Password" "Password" style="margin-top:10px;"}}
        <br />
        {{password "password" password}}
        <br />
        {{label "repeatPassword" "Repeat Password" password style="margin-top:10px;"}}
        <br />
        {{password "repeatPassword" password}}
        <br />
        {{label "email" "Email" email style="margin-top:10px;"}}
        <br />
        {{input "email" user.email}}
        <br />
        {{submit "save" "Submit" style="height:35px; margin-top:20px; width:100%; background-color:DodgerBlue;
            border:none !important; box-shadow:none !important; color:white;"}}
    {{/form}}
            </div>
        </div>
    </div>
</section>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

            {{> frontend/footer}}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<script src="/components/imgareaselect/scripts/jquery.imgareaselect.js"></script>
<script src="/build/jquery.awesome-cropper.js"></script>
<script>
    $(document).ready(function () {
        $('#imageUpload').awesomeCropper(
                { width: 400, height: 400, debug: false }
        );
    });
</script>
            </body>
            </html>

