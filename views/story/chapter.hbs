<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="/javascripts/buttons.js"></script>
<div class="col-lg-12 about-left">
    <div id="button-container">
        <div id="whiteButton" class="color-buttons"><span class="tooltiptext">White BG</span></div>
        <div id="beigeButton" class="color-buttons"><span class="tooltiptext">Beige BG</span></div>
        <div id="greyButton" class="color-buttons"><span class="tooltiptext">Grey BG</span></div>
        <div id="darkGreyButton" class="color-buttons"><span class="tooltiptext">Darkest BG</span></div>
        <div style=" float:left; margin-left:50px;">
            <div id="fontSizeSmaller" style="font-size: 10px; float:left;"><i class="fas fa-font"></i></div>
            <div id="fontSizeReg"  style="font-size: 12px; float:left; margin-left:10px; margin-top:-4px;"><i class="fas fa-font"></i></div>
            <div id="fontSizeLarger"  style="font-size: 16px; float:left; margin-left:10px; margin-top:-8px;"><i class="fas fa-font"></i></div>
        </div>
    </div>

    <div style="float:right">
        {{#if author}}
            <h6><a href="/edit/{{story.id}}">Edit</a></h6>
        {{/if}}
        {{#if authPass}}
            <h6><a href="/story/edit/{{story.id}}">Edit</a></h6>
        {{/if}}
    </div>

    <h4 style="margin-bottom: -20px;">{{story.title}}</h4><br>
    <pre style="color: orangered">{{story.author}}- {{dateFormat story.date "MMMM Do YYYY, h:mm:ssa"}}</pre>
    <pre style="color: orangered">Chapter: {{chapter.chapter}}</pre>
    <p id="storyBody">
        {{{chapter.body}}}
    </p>
</div>

<div class="col-lg-12 about-left" style="margin-top:75px;">
    <div style="float:left; width: 30%">
        {{#if lastChapNum}}
            <a href="/story/{{chapter.storyId}}/{{lastChapNum}}">Last Chapter</a>
        {{/if}}
    </div>
    <div style="float:left; width: 40%">
        <a href="/story/{{chapter.storyId}}/">Back To Main Story Index</a>
    </div>
    <div style="float:left; width: 30%">
        {{#if nextChap}}
            <a href="/story/{{chapter.storyId}}/{{nextChapNum}}">Next Chapter</a>
        {{/if}}
    </div>
</div>