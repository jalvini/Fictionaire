<div class="col-lg-12 about-left">
<div style="width: 30%; padding-top: 50px; padding-bottom: 50px;  margin: 0 auto !important;">
    <div class="form-group">

        {{#form "/login" method="post" class="form"}}
            <h1>Login</h1>
            <div style="width:100%; text-align:center; color:red; height: 0px;">{{error}}</div>
            <br>
            {{label "username" "Username" style="margin-top:10px;"}}
            {{input "name" name type="text" class="form-control"}}
            {{label "password" "Password" style="margin-top:10px;"}}
            {{input "password" password type="password" class="form-control"}}

            {{submit "save" "Login" style="height:35px; margin-top:20px; width:100%; background-color:DodgerBlue;
            border:none !important; box-shadow:none !important; color:white;"}}
        {{/form}}
        <div style="text-align: right; width: 100%; margin-top: 5px;"><a href="/register/">Register</a></div>
    </div>
</div>
</div>
